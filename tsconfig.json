{
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" },
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "module": "ESNext",
    "target": "es5",                         
    "lib": ["es6"],    
    "paths": {
      "*": ["node_modules/*", "src/@types/*"]
    },
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "resolveJsonModule": true
  }
}
